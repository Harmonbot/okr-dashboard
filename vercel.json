{
  "regions": ["hkg1"],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/lark.js": {
      "maxDuration": 30,
      "region": "hkg1"
    },
    "api/file.js": {
      "maxDuration": 60,
      "region": "hkg1"
    },
    "api/*.js": {
      "region": "hkg1"
    }
  },
  "crons": [
    {
      "path": "/api/notify-overdue",
      "schedule": "0 1 * * 1-5"
    }
  ]
}
